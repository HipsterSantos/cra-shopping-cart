            grid-template-areas: 'card1' 'card1' 'card3';
            grid-gap:1.5em;
            padding:2em 5em;
        }
        .contaier > .cards{
            display: flex;
            flex-direction: column;
            box-shadow: 1px 2px 23px rgba(0,0,0,.2);
            padding:1em;
            border-radius: .5em;
            
            

        }
        .contaier > .cards>img{

        } 
        .contaier > .cards> * {
            margin-top:.5em;
        }
        .contaier > .cards> .description>* {
            margin-top:.5em;
            
        }
        .contaier > .cards>button{
            width: 100px;
        
            padding:.8em .5em;
            cursor:pointer;
            border:none;
            border-radius: .5em;
            background: rgba(66, 194, 62, 0.933);
            color:#fff;
            margin-top:.7em
        }
    </style>
